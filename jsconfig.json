{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
